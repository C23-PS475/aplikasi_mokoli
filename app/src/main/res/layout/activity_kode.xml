<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogkode"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogBoxkode"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/white_box">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kodeTitle"
            android:text="Admin Code Verification"
            android:padding="10dp"
            android:textSize="17sp"
            android:background="@drawable/blue_round"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:text="Enter Admin Code:"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/blue_700"
            app:layout_constraintTop_toBottomOf="@id/kodeTitle"
            app:layout_constraintBottom_toTopOf="@id/kodeBox"/>

        <EditText
            android:id="@+id/kodeBox"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/blue_700"
            android:maxLines="1"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kodeTitle" />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/kodeCancel"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:text="Cancel"
            android:background="@drawable/oval_button_background"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius = "20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kodeBox"
            app:layout_constraintBottom_toBottomOf="@id/dialogBoxkode"
            app:layout_constraintEnd_toStartOf="@id/kodeReset"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/kodeReset"
            android:text="Submit"
            android:background="@drawable/oval_button_background"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius = "20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dialogBoxkode"
            app:layout_constraintStart_toEndOf="@id/kodeCancel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>