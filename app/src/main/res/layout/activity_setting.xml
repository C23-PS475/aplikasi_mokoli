<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:id="@+id/dialogForgot"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogBox"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/white_box"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/setTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_round"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="281dp"
            android:layout_height="25dp"
            android:layout_marginTop="72dp"
            android:text="Set PPJ:"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setTitle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ppj"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="3dp"
            android:text="PPJ:"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/desc5"
            app:layout_constraintEnd_toStartOf="@+id/ppj2"
            app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setTitle"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ppj2"
            android:layout_width="120dp"
            android:layout_height="23dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/kwh2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setTitle"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/kwh2"
            android:layout_width="120dp"
            android:layout_height="23dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toEndOf="@+id/kwhharg"
            app:layout_constraintTop_toBottomOf="@+id/setTitle"
            app:layout_constraintVertical_bias="0.775"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/kwhharg"
            android:layout_width="160dp"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:text="Electricity Price:"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setTitle"
            app:layout_constraintVertical_bias="0.851"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="267dp"
            android:layout_height="25dp"
            android:text="Set electricity unit price:"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputBox" />

        <EditText
            android:id="@+id/inputBox"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:backgroundTint="@color/blue_700"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc" />

        <EditText
            android:id="@+id/inputBox2"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:backgroundTint="@color/blue_700"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="@color/blue_700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc2" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/oval_button_background"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputBox2"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/oval_button_background"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@id/dialogBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.866"
            app:layout_constraintStart_toEndOf="@id/btnCancel"
            app:layout_constraintTop_toBottomOf="@+id/inputBox2"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>